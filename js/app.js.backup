// å¤„ç†æ–‡ä»¶ä¸Šä¼ 
function handleFileUpload(files) {
    // æ¸…ç©ºç°æœ‰æ•°æ®
    uploadedImages = [];
    compressedImages = [];
    compressionProgress = 0;
    processedFiles = 0;
    
    // æ£€æŸ¥æ€»æ–‡ä»¶å¤§å°
    let totalSize = 0;
    const validFiles = [];
    
    // éå†æ–‡ä»¶
    Array.from(files).forEach(file => {
        if (file.type.startsWith('image/')) {
            // æ£€æŸ¥å•ä¸ªæ–‡ä»¶å¤§å°
            if (file.size > CONFIG.maxFileSize) {
                console.warn(`è·³è¿‡æ–‡ä»¶ ${file.name}: è¶…è¿‡æœ€å¤§æ–‡ä»¶å¤§å°é™åˆ¶ (${formatFileSize(CONFIG.maxFileSize)})`);
                return;
            }
            
            validFiles.push(file);
            totalSize += file.size;
        }
    });
    
    // æ£€æŸ¥æ€»æ–‡ä»¶å¤§å°
    if (totalSize > CONFIG.maxTotalSize) {
        alert(`æ€»æ–‡ä»¶å¤§å°è¶…è¿‡é™åˆ¶ (${formatFileSize(CONFIG.maxTotalSize)})ï¼Œè¯·å‡å°‘æ–‡ä»¶æ•°é‡æˆ–å¤§å°`);
        return;
    }
    
    // éå†æœ‰æ•ˆæ–‡ä»¶
    validFiles.forEach(file => {
        uploadedImages.push({
            file: file,
            name: file.name,
            size: file.size,
            type: file.type
        });
    });
    
    totalFiles = uploadedImages.length;
    
    // æ˜¾ç¤ºé¢„è§ˆ
    displayPreview();
    
    // æ˜¾ç¤ºå‹ç¼©æŒ‰é’®
    compressBtn.disabled = uploadedImages.length === 0;
    
    // éšè—ç»“æœåŒºåŸŸ
    resultsSection.style.display = 'none';
}

